{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "allowJs": true,
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@dto/*": [
        "dto/*"
      ],
      "@lib/*": [
        "lib/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "dto/**/*",
    "lib/**/*",
    "test/**/*",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}